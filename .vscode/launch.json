        "args": ["test", "--no-run", "--lib", "--package=adventofcode2022"],
        "filter": {
          "name": "adventofcode2022",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'adventofcode2022'",
      "cargo": {
        "args": [
          "build",
          "--bin=adventofcode2022",
          "--package=adventofcode2022"
        ],
        "filter": {
          "name": "adventofcode2022",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
